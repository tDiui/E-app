<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Màu nền sáng nhạt -->
    <solid android:color="#F2E9FB" />

    <!-- Viền mỏng màu tím nhẹ -->
    <stroke
        android:width="1dp"
        android:color="#B89BEB" />

    <!-- Padding nếu cần -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
